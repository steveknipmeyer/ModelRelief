
    {
    // ---------------------------------
    // Files
    // ---------------------------------
        "files.exclude": {
            "**/.git": true,            // this is a default value

            // exclude folders from the workspace Explorer
            "devenv": false,
            "mrenv": true,
            "Publish": true,
            "node_modules": false
        },

        "files.watcherExclude": {
            "**/.git/objects/**": true,
            "**/.git/subtree-cache/**": true,
            "**/node_modules/*/**": true,
            "**/devenv/*/**": true
        },


    // ---------------------------------
    // Markdown
    // ---------------------------------

    // ---------------------------------
    // Python
    // ---------------------------------
        // Path to Python, you can use a custom version of Python by modifying this setting to include the full path.
        "python.defaultInterpreterPath": "./devenv/bin/python",
        "python.envFile": "${workspaceFolder}/.env",
        "python.analysis.extraPaths": [
            "${workspaceFolder}/Solver/Experiments/PyQt5"
        ],

    // ---------------------------------
    // Search
    // ---------------------------------
        // The patterns to exclude when doing a full text search in the workspace.
        "search.exclude": {
            "**/*.d.ts": true,
            // "**/*.js": true,

            "**/obj": true,
            "**/devenv": true,
            "**/node_modules": true,
            "**/Publish": true,
            "**/wwwroot": true,
            "**/lib": true,
            "**/logs": true,

            "**/Jupyter": false,
            "**/MATLAB*": false,
        },
        "files.associations": {
            "appsettings.json": "jsonc",
        },

    // ---------------------------------
    // Terminal
    // ---------------------------------

    // ---------------------------------
    // ThunderClient
    // ---------------------------------
        "thunder-client.customLocation": "Test/",
    }
