
{
    // ---------------------------------
    // Editor
    // ---------------------------------
    "editor.fontFamily": "Monospace",

    // ---------------------------------
    // Files
    // ---------------------------------
        "files.exclude": {
            "**/.git": true,            // this is a default value

            "**/node_modules": true,    // this excludes all folders named "node_modules" from the explore tree
            "devenv": true,
            "mrenv": true,
            "Publish": true,

            // alternative version
            "node_modules": true    // this excludes the folder only from the root of your workspace
        },

        "files.watcherExclude": {
            "**/.git/objects/**": true,
            "**/.git/subtree-cache/**": true,
            "**/node_modules/*/**": true,
            "**/devenv/*/**": true
        },

    // ---------------------------------
    // Python
    // ---------------------------------
        // Path to Python, you can use a custom version of Python by modifying this setting to include the full path.
        "python.pythonPath": "./devenv/bin/python",
        "python.envFile": "${workspaceRoot}/.env",

    // ---------------------------------
    // Search
    // ---------------------------------
        // The folders to exclude when doing a full text search in the workspace.
        "search.exclude": {
            "**/.mypy_cache": true,
            "**/*.d.ts": true,
            "**/*.js": true,
            "**/*.obj": true,
            "**/devenv": true,
            "**/node_modules": true,
            "**/Publish": true,
            "**/[Ww]ork*/**/*": true,
            "**/wwwroot/**/*": true
        },
        "debug.console.fontFamily": "Consolas",
        "debug.console.fontSize": 12,
}
