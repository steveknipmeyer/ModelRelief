{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        // ------------------------------------------------ Build -----------------------------------------------------//
        {
            "label": "gulp",
            "type": "shell",
            "command": "gulp default",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []

        },

        {
            "label": "Compile TypeScript",
            "type": "shell",
            "linux": {
                "command": "${workspaceFolder}/node_modules/typescript/bin/tsc --pretty -p ./ModelRelief "
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": [
                "$tsc"
            ]
        },

        {
            "label": "Build ModelRelief",
            "type": "shell",
            "command": "dotnet build --no-restore ModelRelief",
            "dependsOn": "Compile TypeScript",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": "$msCompile"
        },

        {
            "label": "Build ModelRelief.Test",
            "type": "shell",
            "command": "dotnet build --no-restore ModelRelief.Test",
            "dependsOn": "Compile TypeScript",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Python Extensions",
            "type": "shell",
            "command": "python setup.py build --debug install",
            "options": {
                "cwd": "${workspaceFolder}/Relief"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },

        {
            "label": "Builder local",
            "type": "shell",
            "command": "python Build/Builder.py --target local",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },

        {
            "label": "Builder nginx",
            "type": "shell",
            "command": "python Build/Builder.py --target nginx --deploy True",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },

        // ------------------------------------------------ Run  -----------------------------------------------------//
        {
            "label": "dotnet run",
            "type": "shell",
            "command": "dotnet run",
            "options": {
                "cwd": "${workspaceFolder}/ModelRelief"
            },
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },

        // ------------------------------------------------ Utility -----------------------------------------------------//
        {
            "label": "gulp serve",
            "type": "shell",
            "command": "gulp serve",
            "options": {
                "cwd": "${workspaceFolder}/ModelRelief"
            },
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },

        {
            "label": "dotnet ProcessID",
            "type": "shell",
            "command": "powershell -executionPolicy bypass -noexit -file Tools/DotNetPID.ps1",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
            },
            "problemMatcher": []
        },
    ]
}