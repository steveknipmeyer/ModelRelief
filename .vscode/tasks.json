{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gulp",
            "type": "shell",
            "command": "gulp default",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Compile TypeScript",
            "type": "shell",
            "command": "tsc --pretty -p ModelRelief",
            "windows": {
                "command": "tsc -p ModelRelief "
            },
            "linux": {
                "command": "${workspaceFolder}/node_modules/typescript/bin/tsc -p ./ModelRelief "
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "ASPNET .Core Build",
            "command": "dotnet build",
            "dependsOn": "Compile TypeScript",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": "$msCompile"
        },

        {
            "label": "TMR",
            "type": "shell",
            "command": "python Build/builder.py",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },

        {
            "label": "gulp serve",
            "type": "shell",
            "command": "gulp serve",
            "options": {
                "cwd": "${workspaceFolder}/ModelRelief"
            },
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "dotnet run",
            "type": "shell",
            "command": "dotnet run",
            "options": {
                "cwd": "${workspaceFolder}/ModelRelief"
            },
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        }, 
        {
            "label": "dotnet ProcessID",
            "type": "shell",
            "command": "powershell -executionPolicy bypass -noexit -file Tools/DotNetPID.ps1",   
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
            },
            "problemMatcher": []
        },
    ]
}