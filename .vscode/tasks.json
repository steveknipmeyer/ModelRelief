    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "ASPNET .Core Build", 
            "command": "dotnet build",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "always", 
                "panel": "new"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "Compile TypeScript",
            "type": "shell",
            "command": "tsc -p ModelRelief",
            "windows": {
                "command": "tsc -p ModelRelief "
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [
                "$tsc"
            ]
        }
    ]
}