{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [

        // ------------------------------------------------ Build -----------------------------------------------------//
        {
            "label": "gulp",
            "type": "shell",
            "command": "gulp default",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "detail": "compiler: /usr/bin/g++",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
        },
        {
            "label": "Compile TypeScript",
            "type": "shell",
            "linux": {
                "command": "npx tsc --pretty -p ./ModelRelief "
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "Build ModelRelief",
            "type": "shell",
            "command": "dotnet build --no-restore ModelRelief",
            "dependsOn": "Compile TypeScript",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build ModelRelief.Test",
            "type": "shell",
            "command": "dotnet build --no-restore ModelRelief.Test",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Python Extensions",
            "type": "shell",
            "command": "python setup.py build --debug install",
            "options": {
                "cwd": "${workspaceFolder}/Relief"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Builder local",
            "type": "shell",
            "command": "python Build/Builder.py --target local",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Builder Nginx",
            "type": "shell",
            "command": "python Build/Builder.py --target Nginx --deploy True",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        // ------------------------------------------------ Run  -----------------------------------------------------//
        {
            "label": "dotnet run",
            "type": "shell",
            "command": "dotnet run",
            "options": {
                "cwd": "${workspaceFolder}/ModelRelief"
            },
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        // ------------------------------------------------ Test  -----------------------------------------------------//
        {
            // Output panel (XUnit Test Explorer UI)
            // https://github.com/microsoft/vscode-go/issues/2003
            "label": "testrunner",
            "type": "shell",
            "command": "python Tools/testrunner.py",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        // ------------------------------------------------ Utility -----------------------------------------------------//
        {
            "label": "gulp serve",
            "type": "shell",
            "command": "gulp serve",
            "options": {
                "cwd": "${workspaceFolder}/ModelRelief"
            },
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        }
    ]
}