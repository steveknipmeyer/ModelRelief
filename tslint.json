{
    "linterOptions": {
      "exclude": [
        "/**/*.d.ts",
        "Scripts/ModelExporters/OBJExporter.ts",            // THREE library file
        "Scripts/ModelLoaders/OBJLoader.ts",                // THREE library file
        "Scripts/Viewers/OrthographicTrackballControls.ts", // THREE library file
        "Scripts/Viewers/TrackballControls.ts"              // THREE library file
      ]
    },
    "extends": "tslint:recommended",
//  "rulesDirectory": ["path/to/custom/rules/directory/", "another/path/"],
    "rules": {
        "align": [false, "statements"],
        "comment-format": [false, "check-space"],
        "curly": [false],
        "max-classes-per-file": [true, 10],
        "max-line-length": false,
        "member-ordering": [
            true,
            {
              "order": [
                "public-static-field",
                "private-static-field",
                "public-instance-field",
                "private-instance-field",

                "public-constructor",

                "public-instance-method",
                "protected-instance-method",
                "private-instance-method"
              ]
            }
          ],
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": false,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                // "info",
                // "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "no-empty": [false],
        "no-trailing-whitespace": true,
        "object-literal-sort-keys": false,
        "ordered-imports": true,
        "prefer-for-of": false,
        "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case"]
    },
    "jsRules": {
        "max-line-length": {
            "options": [200]
        }
    }
}