<!DOCTYPE html>

<html>
    <head>
        <title>@ViewBag.Title</title>
        <meta name="viewport" content="width=device-width, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">

        <!------------------------------------------------------------------------------------------------>
        <!--                                    CSS                                                     -->
        <!------------------------------------------------------------------------------------------------>
        <link rel="stylesheet" href="/css/site.css">
        <link rel="stylesheet" href="/css/bootstrap.css">
        @if (String.Equals("Workbench", this.ViewContext.RouteData.Values["controller"].ToString()))
            {
            <link rel="stylesheet" href="/css/workbench.css">           
            }

        <!------------------------------------------------------------------------------------------------>
        <!--                                    Common JavaScript                                       -->
        <!------------------------------------------------------------------------------------------------>
        <script src="/lib/jquery.js"></script>
        <script src="/lib/jquery.validate.js"></script>
        <script src="/lib/jquery.validate.unobtrusive.js"></script>

    </head>

    <body>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">ModelRelief</a>
                </div>

                <div class="navbar-right">
                    @await Component.InvokeAsync("LoginLogout")
                </div>
            </div>
        </nav>

        <div class="container">
            <div>
                @RenderBody()
            </div>

            <footer>
                @await Component.InvokeAsync("Footer")
            </footer>
        </div>

    </body>
</html>
