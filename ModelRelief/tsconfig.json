{
  "compilerOptions": {

    // Compiler
    "target": "es6",
    "lib": [ "es6", "es2015", "dom" ], // assume availability of these libraries
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "outFile": "wwwroot/js/modelrelief.js",
    "experimentalDecorators": true,
    "allowJs": true,

    // Modules
    "module": "amd",                  // generate AMD (Asynchronous Module Definition code for modules
                                      // N.B. Only AMD and System are supported alongside outfile.
    "moduleResolution": "node",       // include node_modules in search paths
    "traceResolution": false,         // debug; show search paths when resolving modules
    "baseUrl": ".",
  },

  "exclude": [ // folders <not> included in compilation
    "node_modules",
    "wwwroot",                  // Scott Allen : NDC Opinionated View of ASPNET Core
    "**/*.js",                  // JavaScript
  ]
}
