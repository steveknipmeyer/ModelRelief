    "strictNullChecks": true,
    // never allow null of undefined to be assigned to types by default
    let modelNameElement : HTMLElement = window.document.getElementById('modelName');         // error
    let modelNameElement : HTMLElement | null = window.document.getElementById('modelName');  // OK
