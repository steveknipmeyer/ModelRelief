{
  // https://github.com/serilog/serilog/wiki/Configuration-Basics
  // "C:\Users\Steve Knipmeyer\AppData\Local\Temp\Logs\ModelRelief.log"
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "%TEMP%\\Logs\\ModelRelief.log" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "ModelRelief"
    }
  },

  // N.B. These settings are defined in the environment-specific appsetting.<Environment>.json (e.g. appsettings.Test.json).
  // ConnectionStrings
  // Paths.StoreUsers

  "Paths": {
    // ResourceFolders complete names are formed dynamically:
    // ConfigurationProvider.GetSetting($"Paths:ResourceFolders:{typeof(TEntity).Name}");
    "ResourceFolders": {
      "Camera": "cameras",
      "DepthBuffer": "depthbuffers",
      "Mesh": "meshes",
      "MeshTransform": "meshtransforms",
      "Model3d": "models",
      "Project": "projects"
    },

    "TestDataUsers": "/Test/Data/Users/",
    "TestDataFiles": "/Test/Data/Files/",
    "Working": "working"
  },

  "Greeting": "Hello, ModelRelief!"
}