{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "logs\\ModelRelief.log" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "ModelRelief"
    }
  },
  
  "Comments": {
    "L1": "N.B. These settings are defined in the environment-specific appsetting.<Environment>.json (e.g. appsettings.Test.json).",
    "L2": "ConnectionStrings",
    "L3": "Paths.StoreUsers"
  },


  "Paths": {
    "Comments": {
      "L1": "ResourceFolders complete names are formed dynamically:",
      "L2": "ConfigurationProvider.GetSetting($\"Paths:ResourceFolders:{typeof(TEntity).Name}\")"
    },
    "ResourceFolders": {
      "Camera": "cameras",
      "DepthBuffer": "depthbuffers",
      "Mesh": "meshes",
      "MeshTransform": "meshtransforms",
      "Model3d": "models",
      "Project": "projects"
    },

    "TestDataUsers": "/Test/Data/Users/",
    "TestDataFiles": "/Test/Data/Files/",
    "Working": "working"
  },

    "Greeting": "Hello, ModelRelief"
  }