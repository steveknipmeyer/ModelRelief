{
  // https://github.com/serilog/serilog/wiki/Configuration-Basics
  // "C:\Users\Steve Knipmeyer\AppData\Local\Temp\Logs\ModelRelief.log"
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": "Verbose",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "%TEMP%\\Logs\\ModelRelief.log" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "ModelRelief"
    }
  },

  // N.B. ConnectionStrings are defined in the environment-specific appsetting.<Environment>.json (e.g. appsettings.Test.json).

  "ResourcePaths": {
    "StoreUsers": "/store/users/",
    "ModelFolders": {
      "DepthBuffer": "depthbuffers",
      "Mesh": "meshes",
      "Models" :  "models"
    },
    "TestDataUser" :  "/Test/Data/User/"
  },

  "Greeting": "Hello, ModelRelief!"
}