{
  "Logging": {
    "LogLevel": {
      "Default": "Info"
    }
  },

  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": "Error",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/ModelRelief.log"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "ModelRelief"
    }
  },
  // N.B. These settings are defined in the environment-specific appsetting.<Environment>.json (e.g. appsettings.Production.json).
  //  ConnectionStrings
  //  Paths.StoreDatabase
  //  Paths.StoreUsers

  // ResourceFolders complete names are formed dynamically.
  // ConfigurationProvider.GetSetting($"Paths:ResourceFolders:{typeof(TEntity).Name}")
  "Paths": {
    "ResourceFolders": {
      "Camera": "cameras",
      "DepthBuffer": "depthbuffers",
      "Mesh": "meshes",
      "MeshTransform": "meshtransforms",
      "NormalMap": "normalmaps",
      "Model3d": "models",
      "Project": "projects"
    },
    "Settings": "/Settings",
    "TestDataUsers": "/Test/Data/Users/",
    "TestDataFiles": "/Test/Data/Files/",
    "Working": "working"
  },
  "Version": "1.0.0"
}