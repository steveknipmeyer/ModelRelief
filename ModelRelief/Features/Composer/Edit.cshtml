@using ModelRelief.Features.Settings

@model ModelRelief.Dto.Mesh

@{
    ViewBag.Title = "Model Composer";
}

<main class="mt-2">
    <div id="rootContainer" class="container-fluid">
        <div id="composerView">
            <div class="row mt-1 mx-5">

                <div class="col-md-6">
                    <div class="row">

                        <div class="col-md-6">
                            <h5>Overview</h5> ModelRelief transforms 3D models into reliefs.
                        </div>

                        <!-- Model -->
                        <div class="col-md-6">
                            <!-- Model View -->
                            <div id="modelView" class="container-fluid">
                                <div class="row">
                                    <div class="col">

                                        <!-- Model Card -->
                                        <div class="card card-cascade narrower">

                                            <!-- Header -->
                                            <div class="modelReliefCardHeader view view-cascade d-flex justify-content-between gradient-card-header grey darken-4 py-2">

                                                <!--Camera (StandardView)-->
                                                <div>
                                                    <!--StandardView Trigger-->
                                                    <button class="btn btn-outline-cyan btn-rounded btn-sm dropdown-toggle ml-0" type="button" id="standardViewButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        <i class="fas fa-camera mt-0"></i>
                                                    </button>

                                                    <!--Menu-->
                                                    <div id="standardView" class="dropdown-menu dropdown-dark">
                                                    </div>
                                                </div>

                                                <h5 class="mt-2">Model</h5>
                                                <button id="fitView" type="button" class="btn btn-outline-cyan btn-rounded btn-sm px-2 mt-0 mr-0">
                                                    <i class="fas fa-expand-arrows-alt mt-0"></i>
                                                </button>
                                            </div>
                                            <!-- /Header -->
                                            <!-- Body -->
                                            <div id="modelViewCardBody" class="card-body embed-responsive embed-responsive-1by1">
                                                <canvas id="modelCanvas" class="embed-responsive-item" tabindex='2'></canvas>
                                            </div>
                                            <!-- /Body -->

                                        </div>
                                        <!-- /Model Card -->

                                        <div id="progressBar" class="progress md-progress secondary-color">
                                            <div class="indeterminate"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /Model View -->
                        </div>
                    </div>

                    <h4>Mesh Settings</h4>
                    <hr class="controlSection">

                    <!-- Gradient Threshold -->
                    <div class=" controlContainer">
                        <span class="controlHeading">Gradient Threshold</span>
                        <hr class="controlHeadingDivider">

                        <div class="row">
                            <div class="col-md-6 controlDescription">
                                <span>This is descriptive text about the control. It describes the effect this control has on the generated mesh.</span>
                            </div>
                            <div class="col-md-3"></div>
                            <div class="col">
                                <div class="d-flex my-1 sliderControl controlText">
                                    <span class="mr-2 mt-1">0</span>
                                    <form class="range-field w-100">
                                        <input id="gradientThreshold" class="border-0" type="range" min="0" max="10" step="0.1" />
                                    </form>
                                    <span class="ml-2 mt-1">10</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Attenuation Factor -->
                    <div class="controlContainer">
                        <span class="controlHeading">Gradient Attenuation</span>
                        <hr class="controlHeadingDivider">

                        <div class="row">
                            <div class="col-md-6 controlDescription">
                                <span>This is descriptive text about the control. It describes the effect this control has on the generated mesh.</span>
                            </div>
                            <div class="col-md-3"></div>
                            <div class="col">
                                <div class="d-flex my-1 sliderControl controlText">
                                    <span class="mr-2 mt-1">0</span>
                                    <form class="range-field w-100">
                                        <input id="attenuationFactor" class="border-0" type="range" min="0" max="100" step="0.5" />
                                    </form>
                                    <span class="ml-2 mt-1">100</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Unsharp Gaussian Low -->
                    <div class="controlContainer">
                        <span class="controlHeading">Gaussian Blur (Unsharp)</span>
                        <hr class="controlHeadingDivider">

                        <div class="row">
                            <div class="col-md-6 controlDescription">
                                <span>This is descriptive text about the control. It describes the effect this control has on the generated mesh.</span>
                            </div>
                            <div class="col-md-3"></div>
                            <div class="col">
                                <div class="d-flex my-1 sliderControl controlText">
                                    <span class="mr-2 mt-1">0</span>
                                    <form class="range-field w-100">
                                        <input id="unsharpGaussianLow" class="border-0" type="range" min="0" max="5" step="0.1" />
                                    </form>
                                    <span class="ml-2 mt-1">5</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Unsharp High Frequency Scale -->
                    <div class="controlContainer">
                        <span class="controlHeading">High Frequency Detail</span>
                        <hr class="controlHeadingDivider">

                        <div class="row">
                            <div class="col-md-6 controlDescription">
                                <span>This is descriptive text about the control. It describes the effect this control has on the generated mesh.</span>
                            </div>
                            <div class="col-md-3"></div>
                            <div class="col">
                                <div class="d-flex my-1 sliderControl controlText">
                                    <span class="mr-2 mt-1">0</span>
                                    <form class="range-field w-100">
                                        <input id="unsharpHighFrequencyScale" class="border-0" type="range" min="0" max="5" step="0.1" />
                                    </form>
                                    <span class="ml-2 mt-1">5</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Mesh Scale (P1) -->
                    <div class="controlContainer">
                        <span class="controlHeading">Scale</span>
                        <hr class="controlHeadingDivider">

                        <div class="row">
                            <div class="col-md-6 controlDescription">
                                <span>This is descriptive text about the control. It describes the effect this control has on the generated mesh.</span>
                            </div>
                            <div class="col-md-3"></div>
                            <div class="col">
                                <div class="d-flex my-1 sliderControl controlText">
                                    <span class="mr-2 mt-1">0</span>
                                    <form class="range-field w-100">
                                        <input id="meshScale" class="border-0" type="range" min="0" max="0.10" step="0.001" />
                                    </form>
                                    <span class="ml-2 mt-1">10%</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Mesh -->
                <div class="col px-0">
                    <!-- Mesh View -->
                    <div id="meshView" class="container-fluid">
                        <div class="row">

                            <div class="col">
                                <!-- Mesh Card -->
                                <div class="card card-cascade narrower">

                                    <!-- Header -->
                                    <div class="modelReliefCardHeader view view-cascade d-flex justify-content-between gradient-card-header grey darken-4 py-2">

                                        <!--Camera (StandardView)-->
                                        <div>
                                            <!--StandardView Trigger-->
                                            <button class="btn btn-outline-cyan btn-rounded btn-sm dropdown-toggle ml-0" type="button" id="standardViewButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class="fas fa-camera mt-0"></i>
                                            </button>

                                            <!--Menu-->
                                            <div id="standardView" class="dropdown-menu dropdown-primary">
                                            </div>
                                        </div>

                                        <h5 class="mt-2">Mesh</h5>
                                        <button id="fitView" type="button" class="btn btn-outline-cyan btn-rounded btn-sm px-2 mt-0 mr-0">
                                            <i class="fas fa-expand-arrows-alt mt-0"></i>
                                        </button>
                                    </div>
                                    <!-- /Header -->
                                    <!-- Body -->
                                    <div id="meshViewCardBody" class="card-body embed-responsive embed-responsive-1by1">
                                        <canvas id="meshCanvas" class="embed-responsive-item" tabindex='2'></canvas>
                                    </div>
                                    <!-- /Body -->
                                </div>
                                <!-- /Mesh Card -->

                                <div id="progressBar" class="progress md-progress secondary-color">
                                    <div class="indeterminate"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /Mesh View -->

                    <div class="d-flex justify-content-center">
                        <a id="generateMesh" class="btn-floating btn-lg purple-gradient"><i class="fas fa-bolt"></i></a>
                    </div>
                </div>
            </div>

            <div id="depthBufferView">
                <!-- The canvas is generated dynamically. -->
                <canvas id="depthBufferCanvas"></canvas>
            </div>

            <div id="normalMapView">
                <!-- The canvas is generated dynamically. -->
                <canvas id="normalMapCanvas"></canvas>
            </div>

        </div>
    </div>
</main>

@section scripts {
    <!--******************************************************************************************-->
    <!--                                    Libraries                                             -->
    <!--******************************************************************************************-->
    <script src="~/lib/threejs/WebGL.js"></script>
    <script src="~/lib/requirejs/require.js"></script>

    <!--******************************************************************************************-->
    <!--                                    ModelRelief                                           -->
    <!--******************************************************************************************-->
    <script>
        var composerMeshModel = @DataConversion.SerializeObject(Model);
    </script>
    <environment names="Development, Test">
        <script src="~/js/shaders.js"></script>
        <script>
            let minifiedExtension = "";
        </script>
    </environment>
    <environment names="Staging, Production">
        <script src="~/js/shaders.min.js"></script>
        <script>
            let minifiedExtension = ".min";
        </script>
    </environment>

    <script>
        requirejs.config({
            baseUrl: ".",
            paths: {
                "ModelRelief": `/js/modelrelief${minifiedExtension}`,
                "three": `/lib/threejs/three${minifiedExtension}`,

                "chai": "/lib/chai/chai",
                "dat-gui": "/lib/threejs/dat.gui.min",
            },
        });
        window.onload = () => {

            requirejs(["ModelRelief"]);
        };
    </script>
}
