@model ModelRelief.Dto.Model3d

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Model3d</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="uploadForm" asp-action="Create" enctype="multipart/form-data" method="post" onsubmit="return false;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input id="name", asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input id="description" asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <br>
            <div class="form-group">
                <label asp-for="FormFile"  class="control-label">OBJ File Upload</label>
                <input id="fileButton" type="file" asp-for="FormFile" accept=".obj" class="form-control-file" data-val="true" data-val-required="Please select an OBJ file to upload." />
                <span asp-validation-for="FormFile" class="text-danger"></span>
            </div>

            <br><br>
            <div class="form-group">
                <input type="submit" value="Upload" class="actionButton btn button-rounded btn-sm" />
            </div>

            <br>
            <div id="formProgressBarContainer"></div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<div hidden id="progressBarTemplate" class="progress-bar progress-bar-info" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="0" , style="width: 0%">
</div>
<partial name="_StatusPanelPartial" />

@section scripts {
<script>
    window.onload = (function (existingOnLoad) {
        return function () {
            existingOnLoad && existingOnLoad();
            requirejs(['FileTransfer/FileUpload']);
        }
    })(window.onload)
</script>
}
