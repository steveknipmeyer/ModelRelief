@model ModelRelief.Dto.Model3d

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Model3d</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="uploadForm" asp-action="Create" enctype="multipart/form-data" method="post" onsubmit="upload(this);return false;">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input id="name", asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input id="description" asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <br>
            <div class="form-group">
                <label asp-for="FormFile"  class="control-label">OBJ File Upload</label>
                <input id="fileButton" type="file" asp-for="FormFile" accept=".obj" class="form-control-file" data-val="true" data-val-required="Please select an OBJ file to upload." />
                <span asp-validation-for="FormFile" class="text-danger"></span>
            </div>

            <br><br>
            <div class="form-group">
                <input type="submit" value="Upload File" class="actionButton btn button-rounded btn-sm" />
            </div>

            <br>
            <div id="progressBar" class="progress-bar progress-bar-info" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="0", style="width: 0%">
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script type="text/javascript">
    //# sourceURL=Createcshtml.js
    debugger;

    function upload(formElement) {
        // https://stackoverflow.com/questions/15410265/file-upload-progress-bar-with-jquery

        var antiForgeryToken = document.querySelector("#uploadForm input[name='__RequestVerificationToken']");

        var name = document.getElementById('name');
        var description = document.getElementById('description');
        var fileButton = document.getElementById('fileButton');
        var files = fileButton.files;
        if (files.length === 0)
            return;

        var formData = new FormData();
        formData.append("Name", name.value);
        formData.append("Description", description.value);
        formData.append("FormFile", files[0]);
        formData.append("__RequestVerificationToken", antiForgeryToken.value);

        $("#progressContainer").show();
        $.ajax({
            xhr: function () {
                var xhr = new window.XMLHttpRequest();

                xhr.upload.addEventListener("progress", function (event) {
                    if (event.lengthComputable) {

                        var percentComplete = event.loaded / event.total;
                        percentComplete = parseInt(percentComplete * 100);
                        updateProgressBar(percentComplete);
                    }
                }, false);

                return xhr;
            },
            url: "/models/create",
            type: "POST",
            data: formData,
            processData: false,
            contentType: false,
            success: function (response) {
                redirect = response.redirectToUrl;
                if (redirect === undefined)
                    console.log(response);
                else
                    window.location.href = redirect;
            },
            error: function (error) {
                console.error(error);
            }
        });
        updateProgressBar(0);
    }

    function updateProgressBar(percentComplete) {
        console.log(percentComplete);
        $('#progressBar').attr('aria-valuenow', percentComplete).css('width', percentComplete);
        $('#progressBar').html(percentComplete + '%');
    }
</script>