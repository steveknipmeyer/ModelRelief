@model IEnumerable<ModelRelief.Dto.Mesh>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Format)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Camera.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepthBuffer.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NormalMap.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeshTransform.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Format)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Camera.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepthBuffer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NormalMap.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeshTransform.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                <a asp-controller="Meshes" asp-action="Compose" asp-route-id="@item.Id">Compose</a>
            </td>
        </tr>
        }
    </tbody>
</table>
