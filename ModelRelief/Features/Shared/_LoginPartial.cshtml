
@if (User.Identity.IsAuthenticated)
{
    <form class="form-inline ml-auto" asp-area="" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm">
        <a asp-area="" asp-controller="Account" asp-action="Manage" title="Manage">Hello @User.Identity.Name</a>
        <button class="btn btn-outline-light my-2 my-sm-0" type="submit" >Logout</button>
    </form>
}
else
{
    <form class="form-inline ml-auto">
        <a class="btn btn-outline-light my-2 my-sm-0" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
    </form>
}
