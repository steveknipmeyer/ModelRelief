<body>
    <main>
        <div class="settingsEditorContainer container-fluid">

            <div class="settingsTable">
                <h2 class="mt-5 mb-4">Settings</h2>

                <section class="mt-4">
                    <span class="settingsHeading">.NET Core</span>
                    <hr class="mt-0" />

                    <div class="row">
                        <div class="col-md-8">
                            Environment = @ViewBag.Environment
                        </div>
                        <div class="col-md-8">
                            ASPNETCORE_URLS = @ViewBag.ASPNETCORE_URLS
                        </div>
                    </div>
                </section>

                <section class="mt-4">
                    <span class="settingsHeading">User Interface</span>
                    <hr class="mt-0" />

                    <div class="row">
                        <div class="col-md-8 form-check form-check-inline">
                            <input type="checkbox" id="extendedCameraControls" class="form-check-input">
                            <label class="form-check-label" for="extendedCameraControls">(Experimental) Extended Camera Controls</label>
                        </div>
                    </div>
                </section>

            </div>
        </div>
    </main>

    <div id="loggerRoot">
    </div>

    @section scripts {
        <!--******************************************************************************************-->
        <!--                                    Libraries                                             -->
        <!--******************************************************************************************-->
        <script src="~/lib/requirejs/require.js"></script>

        <!--******************************************************************************************-->
        <!--                                    ModelRelief                                           -->
        <!--******************************************************************************************-->
        <script>
            requirejs.config({
                baseUrl: '.',
                paths: {
                    'Settings/Editor': '/js/modelrelief',
                }
            });
            window.onload = function () {
                requirejs(['Settings/Editor']);
            }
        </script>
    }
</body>
