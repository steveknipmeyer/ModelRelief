@model IEnumerable<ModelRelief.Dto.Camera>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPerspective)
            </th>
            @*Perspective*@
            <th>
                @Html.DisplayNameFor(model => model.FieldOfView)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AspectRatio)
            </th>

            @*Orthographic*@
            <th>
                @Html.DisplayNameFor(model => model.Left)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Right)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Top)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bottom)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Near)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Far)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.PositionX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PositionY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PositionZ)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.EulerX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EulerY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EulerZ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Theta)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.ScaleX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScaleY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScaleZ)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.UpX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpZ)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPerspective)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.FieldOfView)
