                @Html.DisplayFor(modelItem => item.ScaleX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScaleY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScaleZ)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.UpX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpZ)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
