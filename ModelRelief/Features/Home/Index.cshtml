    <!--Section: contact-->
    <section id="contact" class="py-5">
        <div class="container">

            <!-- Section heading -->
            <h2 class="text-center mb-5">Contact us</h2>
            <!-- Section description -->
            <p class="text-center mx-auto mb-5">Please let us know what you think! <br />We would love to hear your comment and suggestions about where to go next with ModelRelief.</p>

            <form id="contact-form" name="contact-form">

                <!-- Grid row -->
                <div class="row">

                    <!-- Grid column -->
                    <div class="col-md-9 mb-md-0 mb-5">

                            <!-- Grid row -->
                            <div class="row">

                                <!-- Grid column -->
                                <div class="col-md-6">
                                    <div class="mb-0">
                                        <input type="text" id="contact-name" name="Name" class="form-control">
                                        <label for="contact-name" class="">Your name</label>
                                    </div>
                                </div>
                                <!-- Grid column -->
                                <!-- Grid column -->
                                <div class="col-md-6">
                                    <div class="mb-0">
                                        <input type="text" id="contact-email" name="Email" class="form-control">
                                        <label for="contact-email" class="">Your email</label>
                                    </div>
                                </div>
                                <!-- Grid column -->

                            </div>
                            <!-- Grid row -->
                            <!-- Grid row -->
                            <div class="row">

                                <!-- Grid column -->
                                <div class="col-md-12">
                                    <div class="mb-0">
                                        <input type="text" id="contact-subject" name="Subject" class="form-control">
